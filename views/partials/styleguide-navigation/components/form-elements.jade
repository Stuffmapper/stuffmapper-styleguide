.ss-partial-container
	.ss-content
		h1.ss-page-title Form Elements
		#input-sizes.row
			h3.ss-demo-title Input sizes
			p.ss-demo-description Different size inputs
			.ss-demo-container
				.ss-demo-container-upper
					.row
						.col-md-6
							center
								input.sm-text-input.sm-text-input-xl(placeholder="placeholder text")
						.ss-demo-container-divider-container
							.ss-demo-container-divider
						.col-md-6
							center
								input.sm-text-input.sm-text-input-l(placeholder="placeholder text")
						.ss-demo-container-divider-container
							.ss-demo-container-divider
				.row
					.col-md-6
						center
							input.sm-text-input.sm-text-input-m(placeholder="placeholder text")
					.ss-demo-container-divider-container
						.ss-demo-container-divider
					.col-md-6
						center
							input.sm-text-input.sm-text-input-s(placeholder="placeholder text")
				pre.ss-demo-container-lower.sm-code
					= '<div class="sm-button sm-button-xl sm-button-default">...</div>\n'
					= '<div class="sm-button sm-button-l sm-button-default">...</div>\n'
					= '<div class="sm-button sm-button-m sm-button-default">...</div>\n'
					= '<div class="sm-button sm-button-s sm-button-default">...</div>'
		#input-group-with-button.row
			h3.ss-demo-title Input group with button
			p.ss-demo-description yup.
			.ss-demo-container
				.ss-demo-container-upper
					.row
						.col-md-12
							center
								sm-input-group-button(placeholder="placeholder text" width="200px" submit="testFunction()")
				pre.ss-demo-container-lower.sm-code
					= '<sm-input-group-button placeholder="placeholder text" width="200px" submit="testFunction()"></sm-input-group-button>'






