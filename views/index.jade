doctype html
html(lang="en" class= htmlClassList ng-app="ssApp")
	head
		title Stuffmapper Styleguide
		base(href="/styleguide/")
		link(rel="stylesheet" href="css/main.css")
		link(rel="stylesheet" href="css/styleguide-style.css")
		link(rel="stylesheet" href="libs/bootstrap/dist/css/bootstrap.min.css")
		link(rel="stylesheet" href="lib/highlight/src/styles/default.css")
		script(src="libs/angular/angular.min.js")
		script(src="libs/angular-animate/angular-animate.min.js")
		script(src="libs/angular-ui-router/release/angular-ui-router.min.js")
		script(src="libs/jquery/dist/jquery.min.js")
		script(src="libs/bootstrap/dist/js/bootstrap.min.js")
		//- script(src="libs/highlight/src/highlight.js")
		//- script(src="libs/highlight/src/languages/javascript.js")
		//- script(src="libs/highlight/src/languages/css.js")
		script(src="libs/highlight/build/highlight.pack.js")
		script hljs.initHighlightingOnLoad();
		script(src="js/main.js")
	body(ng-controller="MainController")
		#wrapper
			#sidebar-wrapper
				ul.sidebar-nav
					li.sidebar-brand
						a(ui-sref="introduction") Stuffmapper
					li
						button.ss-accordian-button(type="button" data-toggle="collapse" data-target="#ss-overview") Overview
						.collapse-container
							ul#ss-overview.collapse
								a(ui-sref="introduction")
									li Introduction
								a(ui-sref="code-guidelines")
									li Code Guidelines
					li
						button.ss-accordian-button(type="button" data-toggle="collapse" data-target="#ss-design") Design
						.collapse-container
							ul#ss-design.collapse
								a(ui-sref="color-scheme")
									li Color scheme
								a(ui-sref="typography")
									li Typography
								a(ui-sref="animation")
									li Animation
								a(ui-sref="border-radius")
									li Border radius
								a(ui-sref="box-shadow")
									li Box shadow
								a(ui-sref="layout")
									li Layout
								a(ui-sref="icons")
									li Icons
					li
						button.ss-accordian-button(type="button" data-toggle="collapse" data-target="#ss-components") Components
						.collapse-container
							ul#ss-components.collapse
								a(ui-sref="avatars")
									li Avatars
								a(ui-sref="buttons")
									li Buttons
								a(ui-sref="form-elements")
									li Form elements
								a(ui-sref="grid")
									li Grid
								a(ui-sref="links")
									li Links
								a(ui-sref="lists")
									li Lists
								a(ui-sref="modals")
									li Modals
								a(ui-sref="popovers")
									li Popovers
					li
						button.ss-accordian-button(type="button" data-toggle="collapse" data-target="#ss-utility") Utility
						.collapse-container
							ul#ss-utility.collapse
								a(ui-sref="aspect-ratio")
									li Aspect ratio
								a(ui-sref="center-elements")
									li Center elements
								a(ui-sref="hide-elements")
									li Hide elements
								a(ui-sref="layouts")
									li Layouts
								a(ui-sref="text-manipulation")
									li Text manipulation
			#page-content-wrapper
				.container-fluid
					.row
						.col-lg-12(ui-view)
